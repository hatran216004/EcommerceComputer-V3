@using Store_EF.Models
@model User

@{
    ViewBag.title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="signup-in">
    <div class="signup-in__sideimg">
        <img src="~/Public/imgs/banner-sign.png" alt="" />
    </div>
    <div class="signup-in__form">
        <h2 class="signup-in__form-title">Đăng ký tài khoản</h2>
        <p class="signup-in__form-desc">
            Nhập thông tin chi tiết bên dưới
        </p>
        @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post, new { @class = "signup-in__form-group" }))
        {
            @Html.ValidationSummary(true);
            <div class="signup-in__form-item">
                <label class="signup-in__form-item-label" for="email">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "signup-in__form-item-input", id = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="signup-in__form-item">
                <label class="signup-in__form-item-label" for="password">Mật khẩu</label>
                @Html.PasswordFor(m => m.Password, new { @class = "signup-in__form-item-input", id = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            @Html.ValidationMessage("Db");
            <button class="btn btn--signup" type="submit">
                Tạo tài khoản
            </button>

            <div class="signup-in__form-redirect">
                <p>Bạn đã có tài khoản?</p>
                <a class="signup-in__form-redirect-link" href="@Url.Action("SignIn", "Auth")">Đăng nhập</a>
            </div>
        }
    </div>
</div>