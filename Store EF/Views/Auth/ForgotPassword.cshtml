@using Store_EF.Models
@model User

@{
    ViewBag.title = "Forgot password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="signup-in">
    <div class="signup-in__sideimg">
        <img src="~/Public/imgs/banner-sign.png" alt="" />
    </div>
    <div class="signup-in__form">
        <h2 class="signup-in__form-title">Nhập email của bạn</h2>
       
        <form class="signup-in__form-group">
            <div class="signup-in__form-item">
                <label class="signup-in__form-item-label" for="email">Email</label>
                <input type="email" name="email" value="" class="signup-in__form-item-input" id="email"/>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="signup-in__form-redirect mt-40">
                <button class="btn btn--signin" type="submit">Gửi</button>
            </div>
        </form>
    </div>
</div>