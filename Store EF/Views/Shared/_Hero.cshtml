@using Store_EF.Models;
@{ 
    StoreEntities store = new Store_EF.Models.StoreEntities();
}

<style>
    .swiper {
        position: relative;
        width: 892px;
        height: 390px;
    }

    .swiper-wrapper {
        display: flex;
        height: 100%;
    }

    .hero__right {
        overflow: hidden;
    }

    .swiper-button-prev, .swiper-button-next {
        width: 46px;
        height: 46px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 22px;
        background: #ccc;
        opacity: 0.8;
        color: #000;
        border-radius: 50%;
        cursor: pointer;
        user-select: none;
    }

    .swiper-button-prev:hover, .swiper-button-next:hover {
        opacity: 0.7;
    }

    .swiper-button-prev {
        left: 10px;
    }

    .swiper-button-next {
        right: 10px;
    }

    .swiper-slide {
        flex-shrink: 0;
    }

</style>

<section class="hero">
    <div class="hero__inner">
        <div class="hero__left">
            <ul>
                @foreach(Category c in store.Categories) { 
                    <li><a href="@Url.Action("Index", "Products", new { category = c.Name })">@c.Name</a></li>
                }
            </ul>
        </div>
        <div class="hero__right">
            <div class="swiper">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    <div class="swiper-slide">
                        <img src="https://images.unsplash.com/photo-1484788984921-03950022c9ef?q=80&w=1864&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="hero-img-1" />
                    </div>
                    <div class="swiper-slide">
                        <img src="https://images.unsplash.com/flagged/1/apple-gear-looking-pretty.jpg?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="hero-img-2" />
                    </div>
                    <div class="swiper-slide">
                        <img src="https://images.unsplash.com/photo-1501163109389-abf37ca1276a?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="hero-img-3" />
                    </div>
                    ...
                </div>

                <div class="swiper-button-prev">&lt;</div>
                <div class="swiper-button-next">&gt;</div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper', {
        // Optional parameters
        direction: 'horizontal',
        loop: true,

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>